<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
        <link rel="stylesheet" href="/assets/style/index.css">
        <link rel="stylesheet" href="/assets/style/login.css">
</head>

<body>
    <%- include('partials/navbar') %>
        <div class="background">
            <div class="circles" id="circle1"></div>
            <div class="circles" id="circle2"></div>
            <div class="circles" id="circle3"></div>
            <div class="circles" id="circle4"></div>
        </div>
        <div class="content">
            <div class="join">
                <h1>Welcome</h1>
                <h1>Back!</h1>
            </div>
            <div class="form_div">


                <div class="login__form">
                    <h1 class="login__title">Log In</h1>
                    <% if (locals.error) { %>
                        <div id="alert-container" class="alert alert-danger mb-4 alert-container" role="alert">
                            <div class="alert-content">
                                <%= locals.error %>
                            </div>
                            <button type="button" id="btn-closeid" class="btn-close"></button>
                        </div>

                        <% } %>

                            <% if (locals.success) { %>
                                <div id="alert-container" class="alert alert-success mb-4 alert-container" role="alert">
                                    <div class="alert-content">
                                        <%= locals.success %>
                                    </div>
                                    <button type="button" id="btn-closeid" class="btn-close"></button>
                                </div>

                                <% } %>
                                    <form method="POST">


                                        <div class="login__content">
                                            <div class="login__box">
                                                <i class="ri-user-3-line login__icon"></i>

                                                <div class="login__box-input">
                                                    <input type="email" class="login__input" id="login-email"
                                                        name="email" placeholder=" " />
                                                    <label for="login-email" class="login__label">Email</label>
                                                </div>
                                            </div>

                                            <div class="login__box">
                                                <i class="ri-lock-2-line login__icon"></i>

                                                <div class="login__box-input">
                                                    <input type="password" class="login__input" id="signup-pass"
                                                        name="password" placeholder=" " />
                                                    <label for="signup-pass" class="login__label">Password</label>
                                                    <i class="ri-eye-off-line login__eye" id="signup-eye"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="login__button">log In</button>
                                    </form>
                                    <p class="login__register">
                                        Don't have an account? <a href="/signup">Sign Up</a>
                                    </p>

                </div>
            </div>
        </div>
        <% include('./partials/script') %>
</body>

</html>
